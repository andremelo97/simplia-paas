{
  "name": "simplia-paas",
  "version": "1.0.0",
  "private": true,
  "description": "Simplia PaaS - Node.js fullstack monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:internal\" \"npm run dev:admin\"",
    "dev:internal": "cross-env PORT=3001 nodemon src/server/index.js",
    "dev:admin": "cross-env PORT=3002 vite --config vite.config.ts",
    "dev:hub": "cross-env PORT=3003 vite --config vite.hub.config.ts",
    "dev:tq-api": "cross-env PORT=3004 nodemon src/server/tq-api.js",
    "dev:tq-front": "cross-env PORT=3005 vite --config vite.tq.config.ts",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "vite",
    "build": "npm run build:all",
    "build:all": "npm run build:admin && npm run build:hub && npm run build:tq && npm run build:server",
    "build:admin": "vite build --config vite.config.ts",
    "build:hub": "vite build --config vite.hub.config.ts",
    "build:tq": "vite build --config vite.tq.config.ts",
    "build:client": "vite build",
    "build:server": "cp -r src/server dist/ && cp -r src/shared dist/",
    "start": "node src/server/index.js",
    "start:production": "npm run migrate && node src/server/index.js",
    "migrate": "node src/server/infra/scripts/runMigrations.js",
    "db:create": "node src/server/infra/scripts/db-create-test.js",
    "db:drop": "node src/server/infra/scripts/db-drop-test.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate",
    "pretest": "npm run db:create",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@measured/puck": "^0.20.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/supabase-js": "^2.57.4",
    "@tiptap/extension-color": "^3.6.1",
    "@tiptap/extension-highlight": "^3.6.1",
    "@tiptap/extension-horizontal-rule": "^3.6.1",
    "@tiptap/extension-image": "^3.6.1",
    "@tiptap/extension-link": "^3.6.1",
    "@tiptap/extension-list": "^3.6.1",
    "@tiptap/extension-placeholder": "^3.6.1",
    "@tiptap/extension-subscript": "^3.6.1",
    "@tiptap/extension-superscript": "^3.6.1",
    "@tiptap/extension-task-item": "^3.6.1",
    "@tiptap/extension-task-list": "^3.6.1",
    "@tiptap/extension-text-align": "^3.6.1",
    "@tiptap/extension-text-style": "^3.6.1",
    "@tiptap/extension-typography": "^3.6.1",
    "@tiptap/extension-underline": "^3.6.1",
    "@tiptap/extensions": "^3.6.1",
    "@tiptap/pm": "^3.6.1",
    "@tiptap/react": "^3.6.1",
    "@tiptap/starter-kit": "^3.6.1",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.542.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^5.1.0",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^7.8.2",
    "sass": "^1.93.2",
    "swagger-jsdoc": "^6.2.8",
